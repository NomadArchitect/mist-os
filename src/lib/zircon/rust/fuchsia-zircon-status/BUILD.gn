import("//build/components.gni")
import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")
import("//build/testing/boot_tests/mistos_unittest_zbi.gni")

_common_deps = [ "//src/lib/zircon/rust/fuchsia-zircon-types" ]
_common_sources = [ "src/lib.rs" ]

rustc_library("fuchsia-zircon-status") {
  version = "0.1.0"
  edition = "2021"
  sources = _common_sources
  deps = _common_deps
}

rustc_test("status-tests") {
  name = "fuchsia_zircon_status_tests"
  edition = "2021"
  sources = _common_sources
  deps = _common_deps
}

fuchsia_unittest_package("fuchsia-zircon-status-tests") {
  deps = [ ":status-tests" ]
}

mistos_unittest_zbi("mistos-zircon-status-tests") {
  executable_path = "bin/fuchsia_zircon_status_tests"
  test_target_label = ":status-tests"
  prefix = ""
}

group("tests") {
  testonly = true
  deps = [ ":fuchsia-zircon-status-tests" ]
  if (is_mistos) {
    deps += [ ":mistos-zircon-status-tests" ]
  }
}
