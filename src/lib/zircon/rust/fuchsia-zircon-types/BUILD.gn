import("//build/components.gni")
import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")
import("//build/testing/boot_tests/mistos_unittest_zbi.gni")

_common_deps = [ "//third_party/rust_crates:zerocopy" ]
_common_sources = [ "src/lib.rs" ]

rustc_library("fuchsia-zircon-types") {
  version = "0.1.0"
  edition = "2021"
  sources = _common_sources
  deps = _common_deps
  features = [ "zerocopy" ]
}

rustc_test("types-tests") {
  name = "fuchsia_zircon_types_tests"
  edition = "2021"
  sources = _common_sources
  deps = _common_deps
  features = [ "zerocopy" ]
}

fuchsia_unittest_package("fuchsia-zircon-types-tests") {
  component_name = "fuchsia-zircon-types-tests"
  deps = [ ":types-tests" ]
}

mistos_unittest_zbi("mistos-zircon-types-tests") {
  executable_path = "bin/fuchsia_zircon_types_tests"
  test_target_label = ":types-tests"
  prefix = ""
}

group("tests") {
  testonly = true
  deps = [ ":fuchsia-zircon-types-tests" ]
  if (is_mistos) {
    deps += [ ":mistos-zircon-types-tests" ]
  }
}
