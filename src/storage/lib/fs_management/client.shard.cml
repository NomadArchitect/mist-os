{
    include: [ "syslog/client.shard.cml" ],
    collections: [
        {
            name: "fs-collection",
            durability: "transient",
        },
    ],
    use: [
        {
            protocol: "fuchsia.component.Realm",
            from: "framework",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.boot.WriteOnlyLog",
                "fuchsia.inspect.InspectSink",
            ],
            from: "parent",
            to: [ "#fs-collection" ],
        },
    ],
}
