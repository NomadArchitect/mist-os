{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/storage_host",
        lifecycle: { stop_event: "notify" },
    },
    capabilities: [
        {
            protocol: [
                "fuchsia.fs.startup.Startup",
                "fuchsia.storagehost.PartitionsAdmin",
                "fuchsia.storagehost.PartitionsManager",
            ],
        },
        {
            directory: "partitions",
            rights: [ "rw*" ],
            path: "/partitions",
        },
    ],
    expose: [
        {
            directory: [ "partitions" ],
            from: "self",
        },
        {
            protocol: [
                "fuchsia.fs.startup.Startup",
                "fuchsia.storagehost.PartitionsAdmin",
                "fuchsia.storagehost.PartitionsManager",
            ],
            from: "self",
        },
    ],
}
