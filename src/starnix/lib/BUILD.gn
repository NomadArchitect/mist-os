group("lib") {
  deps = [
    "kernel_manager",
    "linux_uapi",
    "magma",
    "starnix-lifecycle",
    "starnix-types",
    "starnix-uapi",
    "syncio",
    "third_party",
  ]

  if (is_mistos) {
    deps -= [ "magma" ]
  }
}

group("tests") {
  testonly = true

  deps = [
    "ebpf:tests",
    "expando:tests",
    "extended_pstate:tests",
    "kernel_manager:tests",
    "range_map:tests",
    "selinux:tests",
    "starnix-lifecycle:tests",
    "starnix-sync:tests",
    "starnix-types:tests",
    "starnix-uapi:tests",
    "syncio:tests",
    "third_party:tests",
    "usercopy:tests",
  ]

  if (is_mistos) {
    deps -= [
      "ebpf:tests",
      "selinux:tests",
    ]
  }
}

group("benchmarks") {
  testonly = true
  deps = [ "extended_pstate:benchmarks" ]
}
