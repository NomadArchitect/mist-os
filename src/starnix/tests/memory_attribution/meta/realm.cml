{
    include: [
        "inspect/offer.shard.cml",
        "syslog/client.shard.cml",
        "syslog/offer.shard.cml",
    ],
    children: [
        {
            name: "starnix_runner",
            url: "starnix#meta/starnix_runner.cm",
        },
        {
            name: "debian_container",
            url: "debian#meta/debian_container.cm",
            environment: "#starnix_runner_env",
        },
        {
            name: "power-broker",
            url: "power-broker#meta/power-broker.cm",
        },
        {
            name: "fake-hrtimer",
            url: "fake-hrtimer#meta/fake-hrtimer.cm",
        },
        {
            name: "system-activity-governor",
            url: "fake-system-activity-governor#meta/fake-system-activity-governor.cm",
        },
        {
            name: "fake-suspend",
            url: "fake-suspend-pkg#meta/fake-suspend.cm",
        },
    ],
    collections: [
        {
            name: "debian_programs",
            environment: "#debian_container_env",
            durability: "single_run",
        },
    ],
    capabilities: [
        {
            config: "fuchsia.starnix.runner.EnableDataCollection",
            type: "bool",
            value: false,
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.diagnostics.ArchiveAccessor",
                "fuchsia.kernel.VmexResource",
            ],
            from: "parent",
            to: "#starnix_runner",
        },
        {
            directory: "boot-kernel",
            from: "parent",
            to: [ "#starnix_runner" ],
        },
        {
            config: "fuchsia.starnix.runner.EnableDataCollection",
            from: "self",
            to: "#starnix_runner",
        },
        {
            protocol: [ "fuchsia.power.broker.Topology" ],
            from: "#power-broker",
            to: [
                "#fake-hrtimer",
                "#starnix_runner",
            ],
        },
        {
            protocol: [
                "fuchsia.power.suspend.Stats",
                "fuchsia.power.system.ActivityGovernor",
            ],
            from: "#system-activity-governor",
            to: [ "#starnix_runner" ],
        },
        {
            directory: "dev-hrtimer",
            from: "#fake-hrtimer",
            to: [ "#starnix_runner" ],
        },
        {
            config: [
                "fuchsia.power.UseSuspender",
                "fuchsia.power.WaitForSuspendingToken",
            ],
            from: "void",
            to: "#system-activity-governor",
            availability: "optional",
        },
        {
            protocol: [
                "fuchsia.hardware.suspend.SuspendSerivce",
                "test.suspendcontrol.Device",
            ],
            from: "#fake-suspend",
            to: "#system-activity-governor",
        },
        {
            protocol: [ "fuchsia.power.broker.Topology" ],
            from: "#power-broker",
            to: "#system-activity-governor",
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.component.Introspector",
                "fuchsia.component.Realm",
                "fuchsia.sys2.RealmQuery",
            ],
            from: "framework",
        },
        {
            protocol: "fuchsia.memory.attribution.Provider",
            from: "#starnix_runner",
        },
    ],
    environments: [
        {
            name: "starnix_runner_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "#starnix_runner",
                },
            ],
        },
        {
            name: "debian_container_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix_container",
                    from: "#debian_container",
                },
            ],
        },
    ],
}
