{
    include: [
        "//sdk/lib/sys/component/realm_builder.shard.cml",
        "//src/testing/realm_proxy/service/meta/realm_proxy.shard.cml",
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/sensors_realm_factory",
    },
    capabilities: [
        { protocol: "fuchsia.sensors.realm.RealmFactory" },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.component.Binder",
                "fuchsia.logger.LogSink",
                "fuchsia.process.Launcher",
            ],
            from: "parent",
            to: "#realm_builder",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.sensors.realm.RealmFactory",
            from: "self",
        },
    ],
}
