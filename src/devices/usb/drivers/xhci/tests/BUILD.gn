import("//build/components.gni")
import("//build/test.gni")

source_set("test-libs") {
  testonly = true
  public_deps = [
    "..:common",
    "//sdk/lib/driver/testing/cpp",
    "//src/devices/bus/testing/fake-pdev",
    "//src/devices/testing/fake-dma-buffer",
    "//src/devices/testing/fake-mmio-reg",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/predicates",
  ]
}

test("xhci-unittest-bin") {
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  output_name = "xhci-unittest"
  sources = [
    "../xhci-enumeration.cc",
    "test-endpoint.cc",
    "test-xhci.cc",
    "xhci-enumeration-test.cc",
  ]
  deps = [
    ":test-libs",
    "//zircon/system/ulib/mmio-ptr:mmio-ptr-fake",
  ]
}

test("xhci-core-unittest-bin") {
  if (is_fuchsia) {
    configs += [ "//build/config:all_source" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  output_name = "xhci-core-unittest"
  sources = [
    "../usb-xhci.cc",
    "../xhci-device-state.cc",
    "../xhci-endpoint.cc",
    "usb-xhci-test.cc",
  ]
  deps = [
    ":test-libs",
    "//src/devices/lib/driver:driver_runtime",
  ]
  defines = [ "TEST_SKIP_INIT" ]
}

