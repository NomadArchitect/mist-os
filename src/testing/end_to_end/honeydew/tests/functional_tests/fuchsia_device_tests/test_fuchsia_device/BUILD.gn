import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("x64_emu_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params = {
      expected_values = {
        board = "x64"
        manufacturer = "default-manufacturer"
        model = "default-model"
        product_name = "default-fuchsia"
      }
    }
    transport = "fuchsia-controller"

    # Only enable for AEMU-x64 as host-tests aren't supported on QEMU-arm64.
    environments = [ aemu_env ]
  }

  python_mobly_test("x64_nuc_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params = {
      expected_values = {
        board = "x64"
        manufacturer = "default-manufacturer"
        model = "default-model"
        product_name = "default-fuchsia"
      }
    }
    transport = "fuchsia-controller"
    environments = [ nuc11_env ]
  }

  python_mobly_test("vim3_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params = {
      expected_values = {
        board = "vim3"
        manufacturer = "default-manufacturer"
        model = "default-model"
        product_name = "default-fuchsia"
      }
    }
    transport = "fuchsia-controller"
    environments = [ vim3_env ]
  }

  python_mobly_test("nelson_test_fc") {
    main_source = "test_fuchsia_device.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    params = {
      expected_values = {
        board = "nelson"
        manufacturer = "Google Inc."
        model = "Google Nest Hub"
        product_name = "elaine"
      }
    }
    transport = "fuchsia-controller"
    environments = [ nelson_env ]
  }
}

# Group containing all of the fuchsia_device functional test cases and its dependencies.
group("tests") {
  testonly = true
  public_deps = [
    ":nelson_test_fc($host_toolchain)",
    ":vim3_test_fc($host_toolchain)",
    ":x64_emu_test_fc($host_toolchain)",
    ":x64_nuc_test_fc($host_toolchain)",
  ]
}
