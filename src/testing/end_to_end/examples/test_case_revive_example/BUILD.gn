group("tests") {
  testonly = true
  public_deps = [
    ":run_wo_test_case_revive($host_toolchain)",
    ":test_case_revive_with_hard_reboot($host_toolchain)",
    ":test_case_revive_with_idle_suspend_timer_resume($host_toolchain)",
    ":test_case_revive_with_idle_suspend_timer_resume_without_duration_check($host_toolchain)",
    ":test_case_revive_with_soft_reboot($host_toolchain)",
  ]
}
