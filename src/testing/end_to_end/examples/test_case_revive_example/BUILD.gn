import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

assert(is_host, "Python E2E tests are host-only")

python_mobly_test("run_wo_test_case_revive") {
  main_source = "test_case_revive_example.py"
  libraries = [
    "//src/testing/end_to_end/honeydew",
    "//src/testing/end_to_end/mobly_base_tests:test_case_revive",
  ]
  params = {
    # Valid values: true, false
    test_case_revive = false
  }
  environments = [
    # Only enable for AEMU-x64 as host-tests aren't supported on QEMU-arm64.
    aemu_env,
    vim3_env,
    nuc11_env,
  ]
}

python_mobly_test("test_case_revive_with_idle_suspend_timer_resume") {
  main_source = "test_case_revive_example.py"
  libraries = [
    "//src/testing/end_to_end/honeydew",
    "//src/testing/end_to_end/mobly_base_tests:test_case_revive",
  ]
  params = {
    # Valid values: true, false
    test_case_revive = true
    fuchsia_device_operation = "idle-suspend-timer-resume"
    resume_timer_duration_sec = 3
    verify_duration = true
  }
  environments = [ vim3_env ]
}

python_mobly_test(
    "test_case_revive_with_idle_suspend_timer_resume_without_duration_check") {
  main_source = "test_case_revive_example.py"
  libraries = [
    "//src/testing/end_to_end/honeydew",
    "//src/testing/end_to_end/mobly_base_tests:test_case_revive",
  ]
  params = {
    # Valid values: true, false
    test_case_revive = true
    fuchsia_device_operation = "idle-suspend-timer-resume"
    resume_timer_duration_sec = 3
    verify_duration = false
  }
  environments = [ vim3_env ]
}

python_mobly_test("test_case_revive_with_soft_reboot") {
  main_source = "test_case_revive_example.py"
  libraries = [
    "//src/testing/end_to_end/honeydew",
    "//src/testing/end_to_end/mobly_base_tests:test_case_revive",
  ]
  params = {
    # Valid values: true, false
    test_case_revive = true
    fuchsia_device_operation = "Soft-Reboot"
  }
  environments = [
    # Only enable for AEMU-x64 as host-tests aren't supported on QEMU-arm64.
    aemu_env,
    vim3_env,
    nuc11_env,
