{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/component_manager_eng",
        args: [
            "--config",
            "/pkg/data/component_manager_debug_config",
        ],
    },
    children: [
        {
            name: "expose_dir_rights",
            url: "#meta/expose_dir_rights.cm",
        },
    ],
    capabilities: [
        {
            protocol: [
                "fuchsia.sys2.LifecycleController",
                "fuchsia.sys2.RealmQuery",
            ],
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.component.resolver.RealmBuilder",
                "fuchsia.component.runner.RealmBuilder",
                "fuchsia.process.Launcher",
            ],
        },

        // Take the maximal set of rights here. They should be scoped down by
        // the component manager configuration file.
        {
            directory: "read_only",
            from: "#expose_dir_rights",
            rights: [ "r*" ],
            path: "/read_only",
        },
        {
            directory: "read_write",
            from: "#expose_dir_rights",
            rights: [ "rw*" ],
            path: "/read_write",
        },
        {
            directory: "read_write",
            from: "#expose_dir_rights",
            rights: [ "rw*" ],
            path: "/read_write_dup",
        },
        {
            directory: "read_exec",
            from: "#expose_dir_rights",
            rights: [ "rx*" ],
            path: "/read_exec",
        },
        {
            directory: "read_only_after_scoped",
            from: "#expose_dir_rights",
            rights: [ "r*" ],
            path: "/read_only_after_scoped",
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.sys2.LifecycleController",
                "fuchsia.sys2.RealmQuery",
            ],
            from: "self",
        },
    ],
}
