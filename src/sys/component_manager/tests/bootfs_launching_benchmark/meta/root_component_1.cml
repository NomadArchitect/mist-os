{
    include: [ "//src/sys/component_manager/tests/meta/elf_runner_and_environment_custom_logsink.shard.cml" ],
    children: [
        {
            name: "test_component_01",
            url: "fuchsia-boot:///test_component_01_package#meta/test_component_01.cm",
            startup: "eager",
            environment: "#elf-env",
        },
    ],
    offer: [
        {
            protocol: "fidl.examples.routing.echo.Echo",
            from: "parent",
            to: "all",
        },

        // LogSink must be manually routed here because this is running in a custom
        // environment where only protocols (not dictionaries) can be routed to the inner
        // component manager used by the tests.
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: "all",
        },
    ],
}
