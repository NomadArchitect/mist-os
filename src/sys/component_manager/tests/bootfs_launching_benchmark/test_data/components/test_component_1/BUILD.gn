import("//build/components.gni")

executable("test_component_1_bin") {
  output_name = "test_component_1"
  output_dir = target_out_dir
  sources = [ "main.cc" ]
  deps = [
    "../../dylibs",
    "//examples/components/routing/fidl:echo_cpp",
    "//sdk/lib/component/incoming/cpp",
  ]
}

fuchsia_component("test_component_1_component") {
  component_name = "test_component_1"
  testonly = true
  manifest = "meta/test_component_1.cml"
  deps = [ ":test_component_1_bin" ]
}

fuchsia_package("test_component_1_package") {
  deps = [ ":test_component_1_component" ]
  testonly = true
}

group("test_component_1") {
  deps = [ ":test_component_1_package" ]
  testonly = true
}
