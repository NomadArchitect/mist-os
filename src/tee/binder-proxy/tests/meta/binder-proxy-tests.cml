{
    include: [
        "//src/sys/test_runners/rust/default.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/binder_proxy_tests",
    },
    children: [
        {
            name: "binder-proxy",
            url: "binder-proxy#meta/binder-proxy.cm",
            startup: "eager",
        },
    ],
    capabilities: [
        {
            directory: "ta",
            from: "self",
            rights: [ "rx*" ],
            path: "/svc/ta",
        },
    ],
    use: [
        {
            protocol: "fuchsia.vsock.Connector",
            from: "parent",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.vsock.Connector",
            from: "parent",
            to: "#binder-proxy",
        },
        {
            directory: "ta",
            from: "self",
            to: "#binder-proxy",
        },
    ],
}
