import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/drivers.gni")

driver_bind_rules("bind") {
  testonly = true
  rules = "meta/forwarder.bind"
  bind_output = "forwarder.bindbc"
  deps =
      [ "//examples/drivers/metadata:fuchsia_examples_metadata_bind_library" ]
}

fuchsia_driver("driver") {
  testonly = true
  output_name = "forwarder_driver"
  sources = [ "forwarder-driver.cc" ]
  deps = [
    "//examples/drivers/metadata:fuchsia_examples_metadata_bind_library_cpp",
    "//examples/drivers/metadata/fuchsia.examples.metadata:fuchsia.examples.metadata_cpp",
    "//examples/drivers/metadata/fuchsia.examples.metadata:metadata",
    "//sdk/fidl/fuchsia.driver.framework:fuchsia.driver.framework_cpp",
    "//sdk/lib/driver/component/cpp",
    "//sdk/lib/driver/devfs/cpp",
    "//sdk/lib/driver/metadata/cpp",
    "//src/devices/lib/driver:driver_runtime",
  ]
}

fuchsia_driver_component("component") {
  testonly = true
  component_name = "forwarder"
  manifest = "meta/forwarder.cml"
  deps = [
    ":bind",
    ":driver",
  ]
  info = "meta/use_info.json"
}
