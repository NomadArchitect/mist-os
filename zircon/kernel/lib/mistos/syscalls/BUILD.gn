import("//build/zircon/zircon_cpu.gni")
import("//build/zircon/zx_library.gni")
import("//zircon/kernel/params.gni")

assert(is_kernel, current_toolchain)

zx_library("syscalls") {
  visibility = [ "//zircon/kernel/*" ]

  # This can be used for headers only by the vDSO and test code.

  sources = []

  # Depend on the files generated from the syscall IDL.
  public_deps = [ "//zircon/kernel/lib/mistos/vdso:private" ]

  if (!kernel_no_userabi) {
    deps = [ ":impl" ]
  }
}

source_set("impl") {
  visibility = [ ":*" ]
  sources = [
    "drivers/char/random.cc",
    "fs/read_write.cc",
    "fs/stat.cc",
    "kernel/exit.cc",
    "kernel/sys.cc",
    "mm/mmap.cc",
    "not_implemented.cc",
    "test.cc",
    "static_assert.cc",
  ]
  deps = [
    "//zircon/kernel/lib/mistos/linux_uapi",
    "//zircon/kernel/lib/syscalls:headers",
    "//zircon/kernel/lib/user_copy",
    "//zircon/kernel/object",
  ]

  # Force to be the last one
  deps += [ "//zircon/kernel/lib/mistos/starnix/kernel" ]
}
